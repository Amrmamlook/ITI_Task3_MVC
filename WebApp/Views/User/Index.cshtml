@model User
@{
    ViewData["Title"] = "Index";
}
<a href="/User/Create"> Add User</a>
<div class="card" style="width:340px">
    <div class="card-body">
        @if(Model.Image!=null)
        {
            <img class="card-img-top" src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" alt="User Image" style=" width:250px" />

        }
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text">@Model.Age</p>
        <a href="#" class="btn btn-primary">See Profile</a>
    </div>
</div>
