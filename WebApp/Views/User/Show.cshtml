@model List<User>
@{
    ViewData["Title"] = "Show";
}
<a href="/User/Create" class="btn btn-outline-success mb-3">Add User</a>
<div class="d-flex flex-wrap justify-content-between">
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="card mb-3" style="max-width: 18rem;">
                @if (item.Image != null)
                {
                    <img class="card-img-top" src="data:image/png;base64,@Convert.ToBase64String(@item.Image)" alt="No Image" style="max-height: 200px; object-fit: contain;">
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Age: @item.Age</p>
                    @if (item.Department != null)
                    {
                        <p class="card-text">Department: @item.Department.NameDepart</p>
                    }
                    <div class="text-center">
                        <a href="/user/Index/@item.Id" class="btn btn-info">Details</a>
                        <a href="/user/Edit/@item.Id" class="btn btn-outline-warning">Edit</a>
                        <a href="/user/Remove/@item.Id" class="btn btn-outline-danger">Remove</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No users to display.</p>
    }
</div>
